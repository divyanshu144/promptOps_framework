# Ollama URL (default: host machine when running in Docker)
OLLAMA_URL=http://host.docker.internal:11434

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# SQLite database path
PROMPTOPS_DB=/data/promptops.db

# MLflow tracking URI
MLFLOW_TRACKING_URI=/data/mlruns

# OpenAI API key (only needed if using provider=openai)
OPENAI_API_KEY=

# Anthropic API key (only needed if using provider=anthropic)
ANTHROPIC_API_KEY=

# Frontend: API URL seen from the browser
NEXT_PUBLIC_API_URL=http://localhost:8000

# Frontend: MLflow URL seen from the browser
NEXT_PUBLIC_MLFLOW_URL=http://localhost:5000
